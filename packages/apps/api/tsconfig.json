{
    "include": [
      "src/**/*",
      "bin/**/*",
      "types.ts",
    ],
  
    "compilerOptions": {
      "lib": ["es2022"],
      "module": "commonjs",
      "target": "es2022",
  
      "baseUrl": ".",
  
      "paths": {
        "~api-root/*": ["./src/*"],
        "~api/*": ["./src/api/*"],
      },
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    }
  }
  